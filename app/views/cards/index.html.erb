<%= render 'cards/partials/search' %>
<% @cards.each do |card| %>
  <div class="row block">
    <div class="col-2">
      <div class="created-at">
        <a href="#">
          <%= card.created_at.strftime('%Y-%m-%e %H:%m') %>
        </a>
      </div>
      <div class="tags">
        <a href="">#space</a>
        <a href="">#nasa</a>
        <a href="">#jwst</a>
      </div>
    </div>

    <div class="col-10">
      <% if card.bookmark.present? %>
        <div class="bookmark">
          <%= link_to card.bookmark, card.bookmark, style: "text-decoration: none; margin-bottom: 1em; display: block; font-family: monospace; font-weight:600;font-size:1.2rem;" %>
        </div>
      <% end %>

      <div class="content" data-controller="highlight">
        <%= card_body_html(card).html_safe %>
      </div>

      <div class="author-links right">
        <%= link_to "Edit", edit_card_path(card) %>
        <%= link_to "Delete", card_path(card), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
      </div>
    </div>
  </div>
<% end %>