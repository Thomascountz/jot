<%= render 'cards/partials/search' %>
<% @cards.each do |card| %>
  <div class="row block">
    <div class="col-2">
      <div class="created-at">
        <a href="">
          <%= card.created_at.strftime('%Y-%m-%e %H:%m') %>
        </a>
      </div>
      <br />
      <div class="tags">
        <a href="">#space</a>
        <a href="">#nasa</a>
        <a href="">#jwst</a>
      </div>
      <br />
      <div>
        <a href="">Edit</a>
        <a href="">Delete</a>
      </div>
    </div>
    <div class="col-10">
      <% if card.bookmark.present? %>
        <div class="bookmark">
          <a style="text-decoration: none; margin-bottom: 1em; padding: 1rem; background-image: linear-gradient(120deg, #ebedee 0%, #fdfbfb 100%); border-radius: 6px; display: block; font-family: monospace; border: 1px solid #ebedee;" class="font-heavy centered" href="https://www.youtube.com/watch?v=zTJifrl3SDM">
            ðŸ”— <%= card.bookmark %>
          </a>
        </div>
      <% end %>
      <div class="content" data-controller="highlight">
        <%= card_body_html(card).html_safe %>
      </div>
    </div>
  </div>
<% end %>