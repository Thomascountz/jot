<div class="row block">
  <div class="col-2">
    <div class="metadata">
      <div class="created-at">
        <% if is_author? %>
          <%= link_to card.created_at.strftime('%Y-%m-%e %H:%m'), author_card_path(card) %>
        <% else %>
          <%= link_to card.created_at.strftime('%Y-%m-%e %H:%m'), card_path(card) %>
        <% end %>
      </div>
      <div class="tags">
        <% card.tags.each do |tag| %>
          <%= link_to "##{tag.name.upcase}", (is_author? ? author_index_path(tag: tag.name) : root_path(tag: tag.name)) %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-10">
    <% if card.bookmark_url.present? %>
      <div class="bookmark">
        <% if card.bookmark_name.present? %>
          <%= link_to card.bookmark_name, card.bookmark_url, style: "margin-bottom: 1em; display: block; font-family: monospace; font-weight:600;font-size:1.2rem;" %>
        <% else %>
          <%= link_to card.bookmark_url, card.bookmark_url, style: "margin-bottom: 1em; display: block; font-family: monospace; font-weight:600;font-size:1.2rem;" %>
        <% end %>
      </div>
    <% end %>

    <div class="content" data-controller="highlight">
      <%= card_body_html(card).html_safe %>
    </div>

    <% if is_author? %>
      <div class="author-links right">
        <%= link_to "Edit", edit_card_path(card) %>
        <%= link_to "Delete", card_path(card), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
    <% end %>
  </div>
</div>
