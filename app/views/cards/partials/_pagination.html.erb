<div class="row">
  <div class="col-12 right">
    <% if page_no > 1 %>
      <%= link_to "Previous", root_path(query: @query, page: page_no - 1), style: "margin-right: 1em;" %>
    <% end %>
    <% if page_no <= final_page_no %>
      <%= link_to "Next", root_path(query: @query, page: page_no + 1) %>
    <% end %>
  </div>
</div>